<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReminderApp.View.HomePage"
             xmlns:ViewModels = "clr-namespace:ReminderApp.ViewModel;assembly=ReminderApp"
             Title="HOME">
    <ContentPage.BindingContext>
        <ViewModels:HomePageViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout
            Spacing="5" 
            x:Name="StackLayout1">


            <ListView ItemsSource="{Binding ReminderList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Title}" TextColor="Black" Detail="{Binding Description}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
            <Button
            Command="{Binding AddButtonClicked}"
            Text="Add Reminders"
            x:Name="btnAddReminders"
            VerticalOptions="Fill"/>
            
            <Button
            Command="{Binding UpdateButtonClicked}"
            Text="Update/Delete Existing Reminders"
            x:Name="btnUpdateDelete"
            VerticalOptions="Fill"/>
            
            <Button
            Text="LogOut"
            x:Name="btnLogout"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
